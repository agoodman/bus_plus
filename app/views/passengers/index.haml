%h1 passengers
%ul.fields
	%li token
	%li start_latitude
	%li start_longitude
	%li end_latitude
	%li end_longitude
%ul.api
	%li 
		%span POST /passengers
		%p.request {"passenger":{"token":"abc123", "start_latitude":26.0, "start_longitude":-82.0, "end_latitude":26.04, "end_longitude":-82.02}}
		%p.response {"passenger":{"id":123, "token":"abc123", "start_latitude":26.0, "start_longitude":-82.0, "end_latitude":26.04, "end_longitude":-82.02}}
	%li 
		%span GET /passengers/:id
		%hr
		%p.response {"passenger":{"id":123, "token":"abc123", "start_latitude":26.0, "start_longitude":-82.0, "end_latitude":26.04, "end_longitude":-82.02}}
	%li 
		%span PUT /passengers/:id
		%p.request {"passenger":{"pickup_at":"2012-11-25T16:38:26.789Z"}}
		%p.response HTTP 200 OK
	%li 
		%span DELETE /passengers/:id
		%p.response HTTP 200 OK
