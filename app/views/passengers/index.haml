%h1 passengers
%ul.api
	%li 
		%span POST /passengers
		%p.request {"passenger":{"latitude":26.0, "longitude":-82.0}}
		%p.response {"passenger":{"id":123, "latitude":26.0, "longitude":-82.0}}
	%li 
		%span GET /passengers/:id
		%hr
		%em For passenger without assigned destination
		%p.response {"passenger":{"id":123, "latitude":26.0, "longitude":-82.0}}
		%em For passenger with assigned destination
		%p.response {"passenger":{"id":123, "latitude":26.0, "longitude":-82.0, "segment": {"start_latitude": 26.0, "start_longitude": -82.0, "end_latitude": 26.01, "end_longitude": -82.01}}}
		%em For passenger with assigned vehicle
		%p.response {"passenger":{"id":123, "latitude":26.0, "longitude":-82.0, "segment": {"start_latitude": 26.0, "start_longitude": -82.0, "end_latitude": 26.01, "end_longitude": -82.01}, "vehicle": {"id": 123, "latitude": 25.9, "longitude": -81.9, "driver_id": 123}}}
	%li 
		%span PUT /passengers/:id
		%p.request {"passenger":{"latitude":26.5, "longitude":-82.5}}
		%p.response HTTP 200 OK
	%li 
		%span DELETE /passengers/:id
		%p.response HTTP 200 OK
