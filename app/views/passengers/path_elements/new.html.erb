<h1>New Path Element</h1>
<% form_for [@passenger,@path_element] do |f| %>
<%= @path_element.errors.full_messages %>
<%= f.hidden_field :passenger_id, :value => @passenger.id %>
<h2>Start</h2>
<p>
	<%= f.label :start_latitude, 'Latitude' %>
	<%= f.text_field :start_latitude %>
</p>
<p>
	<%= f.label :start_longitude, 'Longitude' %>
	<%= f.text_field :start_longitude %>
</p>
<p>
	<%= f.label :start_time, 'Time' %>
	<%= f.text_field :start_time %>
</p>
<h2>End</h2>
<p>
	<%= f.label :end_latitude, 'Latitude' %>
	<%= f.text_field :end_latitude %>
</p>
<p>
	<%= f.label :end_longitude, 'Longitude' %>
	<%= f.text_field :end_longitude %>
</p>
<p>
	<%= f.label :end_time, 'Time' %>
	<%= f.text_field :end_time %>
</p>
<%= f.submit 'NEXT' %>
<% end -%>
