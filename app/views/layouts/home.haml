!!! 5
%html
	%head
		%title 
			bus+
			= "- #{yield(:title)}" unless yield(:title).blank?
		= stylesheet_link_tag :all
		%link{:rel => "stylesheet", :href => "http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/themes/trontastic/jquery-ui.css", :type => "text/css"}
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		%header
			%p#logo bus+
			%p#tagline 
				Scalable
				%br
				On-Demand
				%br
				Transportation
			%nav
				%ul
					%li{class: (controller.action_name=='index' ? 'current' : '')}= link_to 'overview', root_path
					%li{class: (controller.action_name=='passenger' ? 'current' : '')}= link_to 'passenger', passenger_path
					%li{class: (controller.action_name=='driver' ? 'current' : '')}= link_to 'driver', driver_path
					%li= link_to 'developers', api_path, target: '_new'
		#main= yield
		%footer
			Copyright Â© 2012 Migrant Studios. All Rights Reserved.
